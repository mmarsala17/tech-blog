{{#each posts as |post| }}
<div class="card w-80 m-3">
    <div class="card-header">
        <a href="/post/{{post.id}}">
  <h7>{{post.tile}}</h7>
  </a>

  <h4 class="card-subtitle mb-3 text-muted">Posted by {{post.user.name}}</h4>
    </div>
    <div class="card-body">
        {{post.content}}
    </div>
</div>
{{/each}}