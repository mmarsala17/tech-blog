<div id="post_id" data-id={{id}}></div>

    <div class="container align-items-center w-75">

        <div class="card-header">
            <h7 class="text-primary">{{title}}</h7>
            <h5 class="card-subtitle text-muted">Posted by {{user.name}} on {{date}}</h5>
        </div>

        <div class="card-body">
            <p>{{content}}</p>
</div>

<div class="row align-items-center card my-3 text-primary">

    <div class="card-header">
        <h4 class="text-primary">Comments</h4>
    </div>

    <div class="card-body">
        {{#each comments as |comment|}}
        {{comment.content}} </br>
        By {{comment.user.name}} on {{comment.date}} </br> </br>
        {{/each}}
    </div>

    {{#if isOwner}}
    <button class="btn btn-sm btn-primary m-1" style="width: 15vw;" id="updateBtn" data-id="{{id}}">Update Post</button>
    <button class="btn btn-sm btn-danger m-1" style="width: 15vw;" id="deleteBtn" data-id="{{id}}">Delete Post</button>
    {{/if}}

    {{#unless isOwner}}
    <form class="new-comment-form">
        <div class="mb-3 form-group">
            <label for="commentInput" class="form-label">Add Comment</label>
            <input type="text" class="form-control text-primary" id="commentInput" placeholder="Place comment here">
            <button type="submit" class="btn btn-sm btn-primary mt-3" style="width: 15vw;" id="commentBtn" data=id="{{id}}">Submit</button> 
        </div>
    </form>

    {{/unless}}
</div>

{{#if isOwner}}
<script src="../public/js/post.js"></script>
{{else}}
<script src="../public/js/nonOwnerPost.js"></script>
{{/if}}