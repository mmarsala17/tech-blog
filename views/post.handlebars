<div class="card w-40 m-4">

    <div class="card-header">
        <h5>{{title}}</h5>
        <h4 class="card-subtitle mb-2 text-muted">Posted by {{user.name}}</h4>
    </div>

    <div class="card-body">
        <p>{{content}}</p>
    </div>

    {{#if isOwner}}
    <button class="btn btn-sm btn-primary m-3" id="updateBtn" data-id="{{id}}">Update Post</button>
    <button class="btn btn-sm btn-danger m-3" id="deleteBtn" data-id"{{id}}">Delete Post</button>
    {{/if}}

    <button class="btn btn-sm btn-danger m-3" id="deleteBtn" data-id="{{id}}">Add Coment</button>
</div>

<script src="../public/js/post.js"></script>